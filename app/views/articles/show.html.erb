<h1>Showing:<%= @article.title%> </h1>
  <p>
    Title: <%= @article.title%>
  </p>

  <p>
    Description: <%= @article.description%>
  </p>
    <% if @article.user %>
      <ul class="listing">
        <div class="row center">
          <div class="well col-md-4 col-md-offset-4">
          <li>Created by:</li>
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
            <li class="article-title">
              <%= link_to @article.user.username, user_path(@article.user)%>
            </li>
            <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
          </div>
        </div>
      </ul>
    <%end%>
  <% if logged_in? && current_user == @article.user %>
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary" %><br>
    <%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %><br>
  <%end%>
<%= link_to "Back to articles listing", articles_path %>
