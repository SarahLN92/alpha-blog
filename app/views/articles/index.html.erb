<h1>All My Articles</h1>



<div class="row" id="article-cards-holder">
  <% @articles.each do |article| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <%= link_to article.title, article_path(article) %>
        <p class="card-text"><%= truncate(article.description, length: 50) %></p>
        <small>
          Article Created By: <%= article.user.username if article.user %>, on <%= time_ago_in_words(article.created_at) %>
        </small>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-primary" %>
        <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <%= link_to "Show", article_path(article), class: "" %>
      </div>
    </div>
  <%end%>
</div>


